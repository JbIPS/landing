---
layout: layouts/base.njk
contentClass: partner
---
<section class="mt-3 mt-lg-0 px-4 vh-100 intro">
  <div class="col-lg-10 mx-auto h-100 d-flex flex-column align-items-start justify-content-center">
    <h1>{{ h1 | markdown(true)  | safe }}</h1>
  <p class="font-light mt-3 col-lg-6">
    {{ intro | markdown(true) | safe }}
  </p>
  <a href="{{ '/contact/' | url }}" class="btn btn-lg btn-secondary rounded-pill mt-5">{{ intro_button }}</a>
  </div>
</section>
<section class="bg-light py-5 px-4 font-regular">
  <div class="container py-5 content">
    {{ section_1 | markdown | safe }}
  </div>
</section>
<section class="py-5 px-4 yellow-arrow-bkg">
  <div class="container py-5">
    <div class="row justify-content-end">
      <div class="col-lg-9 content">
        {{ section_2 | markdown | safe }}
      </div>
    </div>
  </div>
</section>
<section class="bg-light py-5 px-4">
  <div class="container py-5">
    <h2 class="">{{ section_3_title | markdown(true) | safe }}</h2>
    <div class="container mb-5">
      <div class="row justify-content-between align-items-center">
        <div class="col-12 col-lg-5 py-4">
          <div class="p-3 content">
            {{ habilitation | markdown | safe }}
          </div>
        </div>
        <div class="col-12 col-lg-2">
          <p class="fs-1 text-center pt-5 color-primary">Ou</p>
        </div>
        <div class="col-12 col-lg-5 py-4">
          <div class="p-3 content">
            {{ cocertification | markdown | safe }}
          </div>
        </div>
      </div>
    </div>
    <h2>{{ section_3_partners | markdown(true) | safe }}</h2>
    <div class="container pt-5">
      <div class="row align-items-center">
        {% for partner in partners %}
        <a href="{{ partner.url }}" target="_blank" class="col-2 mx-3">
          {% image partner.img, partner.name %}
        </a>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
<section class="cta d-flex flex-column justify-content-center align-items-center align-items-lg-end">
  <div class="col-8 col-lg-6">
    <h2>{{ cta | markdown(true) | safe }}</h2>
  <a href="{{ '/contact/' | url }}" class="btn btn-primary rounded-pill px-3 mt-3">Let's go!</a>
  </div>
</section>
